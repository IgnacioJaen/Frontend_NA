<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/addbackground"
        tools:context=".activity.EditCategoryActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:layout_marginLeft="10dp"
                android:layout_width="40dp"
                android:background="@null"
                android:layout_height="40dp" android:id="@+id/btnBack" android:layout_marginTop="20dp"
                android:foreground="@drawable/ic_back"/>
        <TextView
                android:text="Editar Categoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView3"
                android:textAllCaps="true" android:textSize="24sp" android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000000" android:fontFamily="monospace"/>
        <Button
                android:layout_width="45dp"
                android:background="@null"
                android:layout_height="55dp" android:id="@+id/btnDelete"
                android:layout_marginTop="10dp" android:layout_marginRight="25dp"
                android:foreground="@android:drawable/ic_menu_delete" android:layout_marginLeft="25dp"
                android:layout_gravity="right" android:layout_marginBottom="5dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="225dp"
                    android:layout_height="225dp" app:srcCompat="@drawable/image"
                    android:id="@+id/imageView" android:layout_marginLeft="55dp"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <Button
                        android:text="CAMARA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/btnCamera" android:layout_marginTop="25dp"
                        android:drawableBottom="@android:drawable/ic_menu_camera" android:layout_marginLeft="10dp"/>
                <Button
                        android:text="SUBIR"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/btnUpload"
                        android:drawableBottom="@android:drawable/ic_menu_upload" android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"/>

            </LinearLayout>

        </LinearLayout>
        <Button
                android:text="Editar Subcategorias"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnSub"
                android:background="@drawable/rectangle_button_signup"
                android:textSize="17dp"
                android:layout_gravity="center" android:layout_marginTop="10dp"/>
        <TextView
                android:text="Nombre de la categoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView" android:textStyle="bold|italic"
                android:textSize="18sp" android:gravity="center" android:layout_marginTop="10dp"
                android:textColor="#000000"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/etName" android:layout_gravity="center" android:textColor="#A5A0A0"
                android:layout_marginLeft="50dp" android:layout_marginRight="50dp" android:layout_marginTop="5dp"/>
        <Button
                android:text="GUARDAR"
                android:layout_width="126dp"
                android:layout_height="wrap_content" android:id="@+id/btnNext"
                android:layout_marginTop="5dp" android:layout_gravity="center"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>