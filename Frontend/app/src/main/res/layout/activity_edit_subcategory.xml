<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.EditSubcategoryActivity"
        android:background="@drawable/bg2">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="299dp"
            android:layout_height="248dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="180dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="300dp" app:layout_constraintVertical_bias="1.0">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/tv_border">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_marginTop="15dp">
                <TextView
                        android:text="Subcategoria"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView5"
                        android:textSize="18sp" android:textStyle="bold"
                        android:layout_marginLeft="90dp"/>
                <Button
                        android:layout_width="35dp"
                        android:layout_height="38dp" android:id="@+id/btnDelete"
                        android:layout_marginRight="20dp" android:layout_marginTop="10dp"
                        android:foreground="@android:drawable/ic_menu_delete" android:layout_marginLeft="15dp"/>
            </LinearLayout>
            <TextView
                    android:text="Ingrese el nuevo nombre de la subcategoria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView6" android:textStyle="italic"
                    android:layout_marginTop="10dp" android:layout_marginLeft="10dp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/etName" android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginTop="15dp">
                <Button
                        android:text="Cancelar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/btnCancel" android:layout_weight="1"
                        android:layout_marginRight="10dp" android:layout_marginLeft="15dp"
                        android:background="#F13E3E"/>
                <Button
                        android:text="GUARDAR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/btnSave" android:layout_weight="1"
                        android:layout_marginLeft="10dp" android:layout_marginRight="15dp"
                        android:background="#37B643"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>