<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/addbackground"
        tools:context=".activity.AddCategoryActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:layout_marginLeft="10dp"
                android:layout_width="40dp"
                android:background="@null"
                android:layout_height="40dp" android:id="@+id/btnBack" android:layout_marginTop="25dp"
                android:foreground="@drawable/ic_back"/>
        <TextView
                android:text="Agregar Categoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView3" android:layout_marginTop="10dp"
                android:textStyle="bold" android:textAllCaps="true" android:textSize="24sp" android:gravity="center"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginTop="20dp">
            <ImageView
                    android:layout_width="250dp"
                    android:layout_height="250dp" app:srcCompat="@android:drawable/ic_menu_gallery"
                    android:id="@+id/imageView" android:layout_marginLeft="55dp"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <Button
                        android:text="CAMARA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/button3" android:layout_marginTop="25dp"
                        android:drawableBottom="@android:drawable/ic_menu_camera"/>
                <Button
                        android:text="SUBIR"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/button4"
                        android:drawableBottom="@android:drawable/ic_menu_upload"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
                android:text="Nombre de la categoria"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView" android:textStyle="bold|italic"
                android:textSize="20sp" android:gravity="center"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Ingresar el nombre de la categoria"
                android:ems="10"
                android:textColorLink="#000000"
                android:id="@+id/etName" android:layout_gravity="center" android:textColor="#A5A0A0"
                android:layout_marginLeft="50dp" android:layout_marginRight="50dp" android:layout_marginTop="5dp"/>
        <Button
                android:text="CONTINUAR"
                android:layout_width="150dp"
                android:layout_height="wrap_content" android:id="@+id/btnNext"
                android:layout_marginTop="25dp" android:layout_gravity="center"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>